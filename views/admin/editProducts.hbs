<div class="content">
    <div class="animated fadeIn">

        <div class="row">
            {{#each images}}
            <div class="card">
                <img src="/product-images/{{this}}" style="width: 10rem; height:10rem;" class="card-img-top">
            </div>
            {{/each}}
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong>Edit Product</strong>
                    </div>
                    <div class="card-body card-block">
                        <form action="/admin/editProducts/{{product.[0]._id}}" method="post" enctype="multipart/form-data"
                            class="form-horizontal">
                            <div class="row form-group">
                                <div class="col col-md-3"><label class=" form-control-label">Name
                                    </label>
                                </div>
                                <div class="col-12 col-md-9"><input type="text" id="text-input" name="productName"
                                        value="{{product.[0].productName}}" class="form-control"></div>
                            </div>

                            <div class="row form-group">
                                <div class="col col-md-3"><label class=" form-control-label">Brand Name
                                    </label>
                                </div>
                                <div class="col-12 col-md-9"><input type="text" id="text-input" name="brandName"
                                        value="{{product.[0].brandName}}" class="form-control"></div>
                            </div>

                            <div class="row form-group">
                                <div class="col col-md-3"><label for="text-input" class=" form-control-label">Price
                                    </label>
                                </div>
                                <div class="col-12 col-md-9"><input type="text" id="text-input" name="price"
                                        value="{{product.[0].price}}" class="form-control"></div>
                            </div>

                            <div class="row form-group">
                                <div class="col col-md-3"><label for="text-input" class=" form-control-label">Quantity
                                    </label>
                                </div>
                                <div class="col-12 col-md-9"><input type="number" id="text-input" name="quantity"
                                        value="{{product.[0].quantity}}" class="form-control"></div>
                            </div>

                            <div class="row form-group">
                                <div class="col col-md-3"><label for="textarea-input"
                                        class=" form-control-label">Description</label>
                                </div>
                                <div class="col-12 col-md-9"><input type="text" rows="2" class="form-control"
                                        value="{{product.[0].desc}}" name="desc"></input>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3"><label for="select"
                                        class=" form-control-label">Category</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <select name="category" id="select" class="form-control">
                                        {{#each categories}}
                                        <option {{#if this.flag}} selected {{/if}}  value="{{this._id}}">{{this.name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col col-md-3"><label for="file-multiple-input"
                                        class=" form-control-label">Add
                                        Images </label></div>
                                <div class="col-12 col-md-9"><input type="file" id="file-multiple-input"
                                        name="product-images" multiple=""
                                        class="form-control-file"></div>
                            </div>
                            <div class="pt-3 ">
                                <div class="d-inline pr-3">
                                    <button type="submit" class="btn btn-primary btn-sm">
                                        Submit
                                    </button>
                                </div>
                                <div class="d-inline">
                                    <button type="reset" class="btn btn-danger btn-sm">
                                        <i class="fa fa-ban"></i> Reset
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>