<style>
    .product_count {
        display: inline-block;
        position: relative;
        margin-bottom: 24px;
    }

    .product_count label {
        font-size: 14px;
        color: #777777;
        font-family: "Roboto", sans-serif;
        font-weight: normal;
        padding-right: 10px;
    }

    .product_count input {
        width: 76px;
        border: 1px solid #eeeeee;
        border-radius: 3px;
        padding-left: 10px;
    }

    .product_count button {
        display: block;
        border: none;
        background: transparent;
        box-shadow: none;
        cursor: pointer;
        position: absolute;
        right: 0px;
        font-size: 14px;
        color: #cccccc;
        -webkit-transition: all 0.3s ease 0s;
        -moz-transition: all 0.3s ease 0s;
        -o-transition: all 0.3s ease 0s;
        transition: all 0.3s ease 0s;
    }

    .product_count button:hover {
        color: #222222;
    }

    .product_count .increase {
        top: -4px;
    }

    .product_count .reduced {
        bottom: -8px;
    }
</style>
