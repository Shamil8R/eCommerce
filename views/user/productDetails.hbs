    <script>
        function addToCartCount(productID){
            $.ajax({
                url: `/addToCart/${productID}`,
                method: 'get',
                success: (response) => {
                    if(response.status){
                        let count = $('#cartCount').html()
                        count = parseInt(count) + 1;
                        swal({
                            text: "Product added to cart.",
                            icon: "success"
                        })
                        $('#cartCount').html(count);
                    }
                }
            })
        }
    </script>