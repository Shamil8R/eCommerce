<!-- Shop Cart Section Begin -->
<section class="shop-cart spad">
    <div class="container">
        <div class="row">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shop__cart__table">
                        <table>
                            <thead>
                                {{#if orders}}
                                <tr>
                                    <th>Date</th>
                                    <th>Address</th>
                                    <th>Mobile</th>
                                    <th>Total</th>
                                    <th>Products</th>
                                </tr>
                                {{else}}
                                NO orders bro!
                                {{/if}}
                            </thead>
                                {{#each orders}}
                            <tbody>
                                <tr>
                                    <td class="cart__product__item__title">
                                        <div class="cart__price">
                                            <h6>{{this.date}}</h6>
                                        </div>
                                    </td>
                                    <td class="cart__product__item">{{this.deliveryDetails.address}}, {{this.deliveryDetails.locality}}, {{this.deliveryDetails.city}},
                                        {{this.deliveryDetails.state}}, {{this.deliveryDetails.zip}}
                                    </td>
                                    <td class="cart__quantity">
                                        {{this.deliveryDetails.phoneNumber}}
                                    </td>
                                    <td class="cart__total">â‚¹ {{this.amount}}</td>
                                    <td class="cart__close"><a href="/viewOrderedProducts/{{this._id}}" class="btn btn-primary">View</a></td>
                                </tr>
                            </tbody>
                                {{/each}}
                        </table>
                    </div>
                </div>
            </div>  
        </div>
</section>
<!-- Shop Cart Section End -->



