<script>

function changeProductOrderStatus(orderedProductId, status){
    swal({
        text: "Are you sure that you want to cancel this product?",
        icon: "warning",
        buttons: true,
        dangerMode: true,
    }).then((willDelete) => {
        if (willDelete) {
            $.ajax({
                url: '/changeOrderStatus',
                method: 'post',
                data: {
                    orderedProductId,
                    status
                },
                success: (response) => {
                    console.log(response)
                    if (response.status) {
                        swal("Your order have been cancelled.", {
                            icon: "success",
                            button: false
                        });
                        setTimeout(() => {
                            location.reload()
                        }, 1000)
                    }
                }
            })
        }
    });
}


</script>

